<div class="col-md-3">
  <span> <label><%= question[:question_text] %></label> </span>
</div>
<div class="col-md-9 <%= require_if(question[:flag]) %> ">
  <input type="file"
  class="form-control <%= require_if(question[:flag]) %>"
  id='<%= question[:question_id] %>'
  name="<%= massage(question[:question_id], form_name) %>"
  <% question[:validations].each do |valid| %>
    <%= render_validation(valid, @validations) %>
  <% end %>
  data-default-next-id="<%= massage(question[:default_next_question_id], form_name) %>"
  <%= require_if(question[:flag]) %>
  <%= render_coded_reference(question[:coded_reference]) %>
  />
  <span class="small">
    <span>Already Attached: </span>
    <span class="filename" data-question-id="<%= massage(question[:question_id], form_name) %>">
    <%= data[question[:question_id]] %>
    </span>
  </span>
  <% question[:validations].each do |validation| %>
    <span class="help-block"><%= @validations[validation][:message] %></span>
  <% end %>
</div>

